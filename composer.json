{
	"name": "pedro-mendonca/translation-tools",
	"description": "Translation tools for your WordPress install.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Pedro MendonÃ§a",
			"email": "ped.gaspar@gmail.com",
			"homepage": "https://pedromendonca.pt"
		}
	],
	"require": {
		"php": ">=5.6",
		"gettext/gettext": "^4.8.4"
	},
	"require-dev": {
	"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"wp-coding-standards/wpcs": "^2.3.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1.1",
		"szepeviktor/phpstan-wordpress": "^0.7.6"
	},
	"config": {
		"optimize-autoloader": true
	},
	"scripts": {
		"test": [
			"@lint:php",
			"@analyse:php",
			"@lint:js"
		],
		"phpcs-i": "phpcs -i",
		"lint:php": "phpcs -v --standard=phpcs.xml",
		"format:php": "phpcbf -v --standard=phpcs.xml",
		"compat:php": "phpcs -v --standard=phpcompat.xml",
		"analyse:php": "phpstan analyse -c phpstan.neon --memory-limit=1G",
		"lint:js": "npm run lint:js",
		"build:js": "npm run build:js",
		"scripts-list": "composer run-script --list",
		"build": [
			"@lint:php",
			"@analyse:php",
			"@lint:js",
			"@build:js",
			"composer install --no-dev",
			"composer archive --file=translation-tools --format=zip",
			"composer install"
		]
	},
	"scripts-descriptions": {
		"test": "Runs all available code tests (PHP_CodeSniffer, PHPStan and JS lint).",
		"phpcs-i": "Log PHPCS debug information.",
		"lint:php": "Runs the PHP code sniffer.",
		"format:php": "Runs the PHP code sniffer and automatically fix errors.",
		"compat:php": "Runs the PHPCompatibilityWP code sniffer.",
		"analyse:php": "Runs the PHPStan code static analysis.",
		"lint:js": "Run npm JS lint.",
		"build:js": "npm run JS uglify and build.",
		"scripts-list": "List all Composer scripts.",
		"build": "Lint and test PHP, lint and build JS, remove dev dependencies, build zip archive, install dev dependencies."
	},
	"archive": {
		"exclude": [
			"composer.*",
			"!/vendor"
		]
	},
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/pedro-mendonca"
		}
	]
}
